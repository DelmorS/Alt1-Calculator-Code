        mc:Ignorable="d"
        Title="About Alt1" Height="185" Width="500.1" Background="White" WindowStyle="ToolWindow" Initialized="Window_Initialized">

    <StackPanel Orientation="Vertical" Margin="0,0,0,0">



        <Grid Margin="10,0,10,10">
