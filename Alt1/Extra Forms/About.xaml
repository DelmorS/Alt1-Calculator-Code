            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Cursor="SizeAll" Source="../Resources/Alt1_New.png" Height="100" Opacity="0.6"/>
